<h2 class="text-center"><%= titulo %></h2>
<hr>
<!-- Se renderiza con parametros -->
<%= render 'shared/errors', objt: @user %>

<div class="row">
	
	<div class="col-md-10 col-md-offset-2">

		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group">
				<%= f.label :username, "Alias", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.text_field :username, class: "form-control", autofocus: true, placeholder: "Alias del usuario en el sistema" %>
				</div>				
			</div>
			
			<div class="form-group">
				<%= f.label :email, "Correo", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.email_field :email, class: "form-control", placeholder: "Correo Electrónico" %>
				</div>				
			</div>

			<div class="form-group">
				<%= f.label :password, "Contraseña", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
				</div>				
			</div>
			
			<div class="form-group">
		    	<div class="col-sm-offset-2 col-sm-6">		      		
		      		<%= f.submit label_btn, class: "btn btn-primary" %>		      		
		    	</div>		    	
		  	</div>
			
		<%end%>

	</div>
	
</div>