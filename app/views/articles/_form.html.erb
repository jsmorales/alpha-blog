<h2 class="text-center"><%= titulo %></h2>
<hr>
<!-- Se renderiza con parametros -->
<%= render 'shared/errors', objt: @article %>

<div class="row">
	
	<div class="col-md-10 col-md-offset-2">

		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group">
				<%= f.label :tittle, "Título", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.text_field :tittle, class: "form-control", autofocus: true, placeholder: "Título que llevará el artículo" %>
				</div>				
			</div>
			
			<div class="form-group">
				<%= f.label :description, "Descripción", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Contenido del artículo" %>
				</div>				
			</div>

			<!-- Muestra todas las categorías disponibles -->

			<div class="form-group">
			
				<div class="row">

					<div class="col-sm-offset-2 col-sm-8">
						<%= f.collection_check_boxes :category_ids,  Category.all, :id, :name do |cb| %>
							<% cb.label(class: "checkbox-inline input-checkbox") {cb.check_box(class:"checkbox") + cb.text}  %>
						<% end %>
					</div>
					
				</div>
								
			</div>
			
			<div class="form-group">
		    	<div class="col-sm-offset-2 col-sm-6">		      		
		      		<%= f.submit "Guardar", class: "btn btn-primary" %>
		      		<%= link_to "Cancelar", articles_path, class: "btn btn-danger" %>
		    	</div>		    	
		  	</div>
			
		<%end%>

	</div>
	
</div>
