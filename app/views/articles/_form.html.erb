<!-- Muestra los mensajes de error de 
las validaciones del modelo, esto se puede comprobar por consola. -->
<% if @article.errors.any? %>

	<ul>
		<%= @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>

<% else %>
	<ul></ul>
<% end %>

<div class="row">
	
	<div class="col-md-10 col-md-offset-2">

		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group">
				<%= f.label :tittle, "Título", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.text_field :tittle, class: "form-control", autofocus: true, placeholder: "Título que llevará el artículo" %>
				</div>				
			</div>
			
			<div class="form-group">
				<%= f.label :description, "Descripción", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Contenido del artículo" %>
				</div>				
			</div>
			
			<div class="form-group">
		    	<div class="col-sm-offset-2 col-sm-6">		      		
		      		<%= f.submit "Guardar", class: "btn btn-primary" %>
		      		<%= link_to "Cancelar", articles_path, class: "btn btn-danger" %>
		    	</div>		    	
		  	</div>
			
		<%end%>

	</div>
	
</div>
