<h1 class="text-center">Inicio de Sesión</h1>
<hr>

<div class="row">
	
	<div class="col-md-10 col-md-offset-2">

		<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

			<div class="form-group">
				<%= f.label :email, "Correo", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Correo de Usuario" %>
				</div>				
			</div>

			<div class="form-group">
				<%= f.label :password, "Contraseña", class: "col-sm-2 control-label" %>
				<div class="col-sm-6">
					<%= f.password_field :password, class: "form-control", autocomplete: "off"%>
				</div>				
			</div>				
			
			<div class="form-group">
		    	<div class="col-sm-offset-2 col-sm-6 text-center">		      		
		      		<%= f.submit "Iniciar Sesión", class: "btn btn-success" %>		      		
		    	</div>		    	
		  	</div>
			
		<%end%>

	</div>
	
</div>